<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"

    app:cardBackgroundColor="#D1B235"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"

        android:layout_marginVertical="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txtv_branch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Branch"
                android:padding="4dp"
                android:layout_gravity="left"
                android:layout_marginRight="6dp"

                android:background="@drawable/layout_branch_rv"
                />
            <TextView
                android:id="@+id/txtv_Date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Date"
                android:layout_gravity="center"
                android:padding="4dp"
                android:layout_marginRight="4dp"

                android:background="@drawable/layout_branch_rv"
                />
            <TextView
                android:id="@+id/txtv_uploader_emailid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="atharva.bhanage.20042@iitgoa.ac.in"
                android:layout_gravity="center"
                android:padding="4dp"
                android:background="@drawable/layout_branch_rv"
                />
        </LinearLayout>


            <TextView
                android:id="@+id/txtv_relative_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_background_question_poll"
                android:padding="12dp"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/andika"

                android:text="Question"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/ic_horizontal_line"
                />

        <Button
            android:id="@+id/opt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.BusBay4"
            android:background="@drawable/layout_answer_poll"
            android:padding="2dp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/andika"

            android:textSize="10dp"


            android:drawableLeft="@drawable/ic_button_unchecked"


            android:text="Option1" />
