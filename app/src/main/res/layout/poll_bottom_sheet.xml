<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:theme="@style/Theme.BusBay3"
    android:background="@drawable/layout_bottom_sheet"
    android:layout_height="match_parent"



    xmlns:autofit="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_downarrow_bottom_sheet"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/questionPoll"
                style="@style/Theme.BusBay1"
                android:layout_width="match_parent"


                android:layout_height="match_parent"
                android:layout_margin="12dp"

                android:layout_marginBottom="50dp"


                android:background="@drawable/layout_background_question_poll"
                android:hint="Enter Your Question"
                android:inputType="textMultiLine"
                android:maxLength="150"
                android:padding="30dp"
                android:textColorHint="#000000" />


        </ScrollView>

        <Button
            android:id="@+id/btnSavePoll"
            android:layout_width="50dp"
            android:layout_height="48dp"

            android:layout_marginTop="4dp"

            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_save"
            android:hint="Send Poll"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_horizontal_line"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/scrollView2"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextanswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"


            android:layout_marginTop="17dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"
            android:hint="Enter 1st Option"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="visible"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/editTextanswer2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 2nd Option"

            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer1" />

        <EditText
            android:id="@+id/editTextanswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 3rd Option"


            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer2" />

        <EditText
            android:id="@+id/editTextanswer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 4th Option"

            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer3" />

        <EditText
            android:id="@+id/editTextanswer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 5th Option"

            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer4" />

        <EditText
            android:id="@+id/editTextanswer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 6th Option"

            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer5" />

        <EditText
            android:id="@+id/editTextanswer7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="4dp"
            android:background="@drawable/layout_answer_poll"
            android:ems="10"

            android:hint="Enter 7th Option"
            android:inputType="textPersonName"
            android:maxLength="50"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:visibility="gone"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer6" />

        <android.widget.Space
            android:id="@+id/spacebottomsheet"
            android:layout_width="241dp"
            android:layout_height="38dp"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/btnaddAnotherOption" />

        <Button
            android:id="@+id/btnaddAnotherOption"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/andika"
            android:background="@drawable/layout_dotted_dashed_addpoll"
            android:text="Add Option"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/editTextanswer7" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>